{
  "name": "kiln-tracker-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build": "concurrently --handle-input \"tsc -p projects/api/tsconfig.build.json\" \"ng build\"",
    "format": "prettier --write \"projects/api/src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register projects/api/src/main.ts",
    "start:dev": "concurrently --handle-input \"ng serve\" \"wait-on dist/api/main.js && nodemon\" \"tsc -w -p projects/api/tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/api/main.js",
    "test": "ng test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./projects/api/e2e/jest-e2e.json",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.0",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/forms": "~8.0.0",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "~8.0.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/cli": "~8.0.0",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "~8.9.4",
    "@types/supertest": "^2.0.7",
    "codelyzer": "^5.0.0",
    "concurrently": "^4.1.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.6.0",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "protractor": "~5.4.0",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "~7.0.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "projects/api/src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../../../coverage",
    "testEnvironment": "node"
  }
}
