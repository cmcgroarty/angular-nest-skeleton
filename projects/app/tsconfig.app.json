{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/app",
    "types": [],
    "paths": {
      "@core/*": [
        "./src/app/core/*"
      ],
      "@modules/*": [
        "./src/app/modules/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@env/*": [
        "./src/environments/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
